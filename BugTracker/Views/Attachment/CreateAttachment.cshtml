@model CreateAttachmentViewModel
@{
    ViewBag.Title = "Create Attachment";
}

<h3>@ViewBag.Title:</h3>

@using (Html.BeginForm("CreateAttachment", "Attachment", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Discription, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Discription, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <input type="file" name="Media" />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit Attachment" class="btn btn-dark" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
