@model TicketsAssignmentViewModel
@{
    ViewBag.Title = "Tickets Assignment";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("TicketsAssignment", "Ticket", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="form-group">
            @Html.Label("Project", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownListFor(x => Model.DeveloperId, new SelectList(Model.Developers, "Value", "Text"),
               "-Select Project-", htmlAttributes: new { @class = "form-control", id = Model.DeveloperId})
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Assign" class="btn btn-dark" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
