@model List<AllTicketsViewModel>
@{
    ViewBag.Title = "DevelopersTickets";
}

<h2>@ViewBag.Title</h2>

@if (Model.Any())
{
    <table id="table_id" class="compact stripe" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Project</th>
                <th></th>
                <th>Title</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Type</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Creator</th>
                <th>Assigned Developer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>
                    <a title="Ticket Details" href="@Url.Action("TicketDetails", "Ticket", new { id = ticket.Id })">
                        <i class="ti-pencil text-primary"></i>
                    </a>
                    @ticket.Id</td>
                    <td>@ticket.ProjectName</td>
                    <td>
                        @if (ticket.EditAvailable)
                        {
                            <a title="Edit Ticket" href="@Url.Action("Edit", "Ticket", new { id = ticket.Id })">
                                <i class="ti-pencil text-primary"></i>
                            </a>
                        }
                    </td>
                    <td>@ticket.Title</td>
                    <td>@ticket.DateCreated.ToString("dd-MM-yyyy HH:mm")</td>
                    <td>@ticket.DateUpdated.ToString("dd-MM-yyyy HH:mm")</td>
                    <td>@ticket.Type</td>
                    <td>@ticket.Status</td>
                    <td>@ticket.Priority</td>
                    <td>@ticket.Author</td>
                    <td>@ticket.Assignee</td>
                </tr>
            }
    </table>
}

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}
