@model List<AllProjectsViewModel>
@{
    ViewBag.Title = "AllProjects";
}

@if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
{
    <div class="list-unstyled list-inline list-btn">
        <a class="btn btn-dark" href="@Url.Action("Create", "Project")">
            Add new project
        </a>
    </div>
}
<br />
<!--Show all projects-->
@if (Model != null || Model.Any())
{
    <table id="table_id" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Members</th>
                <th>Tickets</th>
                <th>Created</th>
                <th>Updated</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
            <tr>
                <td>@project.Name</td>
                <td>@project.MembersNumber</td>
                <td>@project.TicketsNumber</td>
                <td>@project.DateCreated.ToString("dd-MM-yyyy HH:mm")</td>
                <td>
                    @if (project.DateCreated != project.DateUpdated)
                    {
                        @project.DateUpdated.ToString("dd-MM-yyyy HH:mm")
                    }
                </td>
                <td><a href="@Url.Action("Edit", "Project", new { id = project.Id })">Edit</a></td>
                <td><a href="@Url.Action("EditMembers", "Project", new { projectId = project.Id })">Edit Members</a></td>
            </tr>
            }
    </table>
}

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}