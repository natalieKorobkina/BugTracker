@using BugTracker.Models
@using Microsoft.AspNet.Identity
@model LoginViewModel
@{
    ViewBag.Title = "Dashboard";
}
<div class="row" style="display:flex">
    <div class="col-md-4">
        <div class="card">
            <div class="grid-margin card-body">
                <a href="@Url.Action("UserProjects", "Project")" class="nav-link">
                    <div>
                        <i class="ti-folder" style="color:darkviolet; font-size:45px"></i>
                    </div>
                    <div>
                        <span class="menu-title" style="color:darkviolet; font-size: 20px">MY PROJECTS</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="grid-margin card-body">
                <a href="@Url.Action("AllTickets", "Ticket")" class="nav-link">
                    <div>
                        <i class="ti-files" style="color:darkcyan; font-size:45px"></i>
                    </div>
                    <div>
                        <span class="menu-title" style="color:darkcyan; font-size: 20px">MY TICKETS</span>
                    </div>
